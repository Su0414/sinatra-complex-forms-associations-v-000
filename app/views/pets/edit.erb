<h1>Update Pet</h1>

<form action="/pets<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" id="pet[name]" name="pet_name">

  <br></br>
  <label>Choose an existing owner:</label>

  <%@Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" id=owner[name] name="owner_name"></input>
    <br></br>

  <input type="submit" value="Create Pet">
</form>
